<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:grid="sap.ui.layout.cssgrid" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core" controllerName="com.sysco.wm.palletisationui.controller.CageDetails">
    <Page title="{i18n>title}" showHeader="false">
        <VBox class="sapUiTinyMargin" width="100%">
            <HBox width="100%">
                <VBox width="60%">
                    <HBox>
                        <items>
                            <Title id="cageTitle" text="" class="sapUiTinyMargin"/>
                            <ObjectStatus state="Success" text="{i18n>open}" class="sapUiTinyMargin"/>
                            <Label id="LabelRoute" text="" class="sapUiTinyMargin"/>
                        </items>
                    </HBox>
                    <Button text="{i18n>skip}" class="blackButton roundCorner" visible="false"/>
                    <Table id="cageTable" items="{ path: 'flattened>/visibleResults' }" inset="false">
                        <columns>
                            <Column width="15%">
                                <Text text="{i18n>cage_id}"/>
                            </Column>
                            <Column width="11%">
                                <Text text="{i18n>drop}"/>
                            </Column>
                            <!--<Column>
                                <Text text="{i18n>material}"/>
                            </Column>-->
                            <Column width="19%">
                                <Text text="{i18n>casenunits}"/>
                            </Column>
                            <Column width="20%">
                                <Text text="{i18n>packbox}"/>
                            </Column>
                            <Column width="15%">
                                <Text text="{i18n>position}"/>
                            </Column>
                            <Column>
                                <Text text="{i18n>status}"/>
                            </Column>
                        </columns>

                        <items>
                            <ColumnListItem vAlign="Middle">
                                <cells>
                                    <Text text="{flattened>CageID}"/>
                                    <Text text="{flattened>Drop}"/>
                                    <!--<Text text="{flattened>Material}"/>-->
                                    <Text text="{flattened>FinalTotal}"/>
                                    <Text text="{flattened>TotalPackBoxReq}"/>
                                    <Text text="{flattened>concatPositionInCage}"/>
                                    <ObjectStatus state="{flattened>Status}" icon="sap-icon://circle-task-2"/>
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>

                    <HBox justifyContent="Center">
                        <!-- Up Arrow -->
                        <Button id="btnUp" icon="sap-icon://navigation-up-arrow" type="Transparent" press=".onShowLess" visible="false"/>
                        <!-- hidden initially -->

                        <!-- Down Arrow -->
                        <Button id="btnDown" icon="sap-icon://navigation-down-arrow" type="Transparent" press=".onShowMore"/>
                    </HBox>
                </VBox>
                <VBox width="40%">
                    <items>
                        <grid:CSSGrid id="grid1" gridTemplateColumns="20px 180px 0px" gridTemplateRows="25px 180px 35px">
                            <Title text="" id="cageIdOnBox" class="">
                                <layoutData>
                                    <grid:GridItemLayoutData gridColumn="2 / 4"/>
                                </layoutData>
                            </Title>
                            <Button type="Transparent" enabled="false"/>
                            <Table id="table0" backgroundDesign="Solid" fixedLayout="true" showSeparators="Inner" class="customBorderSpacing" inset="false"/>

                            <Button type="Transparent" class="" enabled="false"/>
                            <Text text="" id="dropValue" class="paddingGrid">
                                <layoutData>
                                    <grid:GridItemLayoutData gridColumn="2 / 4"/>
                                </layoutData>
                            </Text>
                            <Button text="{i18n>confirm_next}" type="Transparent" class="roundCorner blackButton largeWidth" press="onConfirm">
                                <layoutData>
                                    <grid:GridItemLayoutData gridColumn="2 / 4"/>
                                </layoutData>
                            </Button>
                        </grid:CSSGrid>
                    </items>
                </VBox>
            </HBox>
        </VBox>
    </Page>
</mvc:View>