<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:grid="sap.ui.layout.cssgrid"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    controllerName="com.sysco.wm.palletisationui.controller.LabelPrint"
>
    <Page
        title="{i18n>title}"
        showHeader="false"
    >
        <HBox
            width="100vw"
            fitContainer="true"
            visible="true"
            class="twoRemPadding"
        >
            <VBox
                width="70%"
                height="auto"
                alignItems="Center"
                alignContent="Center"
                justifyContent="Center"
                class="borderRight"
                fitContainer="true"
            >
                <VBox
                    width="100%"
                    alignContent="Center"
                    alignItems="Start"
                    class="cageVBoxMarginLeft"
                    fitContainer="true"
                >
                    <Toolbar
                        design="Transparent"
                        style="Clear"
                        width="100%"
                        class="marginLeftToolbar"
                    >
                        <Title
                            id="titleRoute1"
                            text=""
                        />
                        <ToolbarSpacer width="7rem" />
                        <Button
                            text="{i18n>skip}"
                            class="blackButton roundCorner"
                            visible="false"
                        />
                    </Toolbar>
                    <ObjectStatus
                        state="Success"
                        text="{i18n>open}"
                        class="customBeginMargin"
                    />
                </VBox>
                <HBox
                    width="100%"
                    alignContent="Start"
                    alignItems="Start"
                    class="sapUiTinyMargin cageVBoxMarginLeft"
                    fitContainer="true"
                >
                    <Label
                        id="LabelRoute1"
                        text=""
                    />
                </HBox>
                <Table
                    id="cageList1"
                    items="{
                                path: 'flattened>/visibleResults'
                                }"
                                inset="false"
                        mode="None"
                >
                   <columns>
                            <Column>
                                <Text text="{i18n>cage_id}" />
                            </Column>
                            <Column>
                                <Text text="{i18n>material}" />
                            </Column>
                            <Column>
                                <Text text="{i18n>total_quantity}" />
                            </Column>
                            <Column>
                                <Text text="{i18n>unit_code}" />
                            </Column>
                            <Column>
                                <Text text="{i18n>position}" />
                            </Column>
                            <Column>
                                <Text text="{i18n>status}" />
                            </Column>
                        </columns>

                        <items>
                            <ColumnListItem>
                                <cells>
                                    <Text text="{flattened>CageID}" />
                                    <Text text="{flattened>Material}" />
                                    <Text text="{flattened>TotalQuantity}" />
                                    <Text text="{flattened>Uom_UnitCode}" />
                                    <Text text="{flattened>PositionInCage}" />
                                    <ObjectStatus
                                        state="{flattened>Status}"
                                        icon="sap-icon://circle-task-2"
                                    />
                                </cells>
                            </ColumnListItem>
                        </items>
                </Table>
                <HBox justifyContent="Center">
                    <!-- Up Arrow -->
                    <Button
                        id="btnUp1"
                        icon="sap-icon://navigation-up-arrow"
                        type="Transparent"
                        press=".onShowLess"
                        visible="false"
                    />
                    <!-- hidden initially -->

                    <!-- Down Arrow -->
                    <Button
                        id="btnDown1"
                        icon="sap-icon://navigation-down-arrow"
                        type="Transparent"
                        press=".onShowMore"
                    />
                </HBox>
            </VBox>
            <VBox
                width="30%"
                height="auto"
                alignItems="Center"
                alignContent="Center"
                justifyContent="Center"
                class="borderLeft"
                visible="true"
                fitContainer="true"
            >
                <VBox alignItems="Start">
                    <items>
                        <Button
                            text="{i18n>print}"
                            class="blackButton largeWidth roundCorner"
                            press="onPrint"
                        />
                        <Button
                            text="{i18n>next_pallet}"
                            class="blackButton largeWidth roundCorner"
                            press="nextPallet"
                        />
                        <Button
                            text="{i18n>next_route}"
                            class="blackButton largeWidth roundCorner"
                            enabled="false"
                        />
                    </items>
                </VBox>
            </VBox>
        </HBox>
    </Page>
</mvc:View>
